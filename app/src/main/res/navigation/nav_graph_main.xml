<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.olgabakhur.baseproject.presentation.ui.signIn.SignInFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_breakingNewsFragment"
            app:destination="@id/breakingNewsFragment" />
    </fragment>

    <fragment
        android:id="@+id/breakingNewsFragment"
        android:name="com.olgabakhur.baseproject.presentation.ui.breakingNews.BreakingNewsFragment"
        android:label="@string/breaking_news_label"
        tools:layout="@layout/fragment_breaking_news" />
</navigation>
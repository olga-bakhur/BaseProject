<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Toolbar-->
    <style name="Theme.BaseProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorBackground</item>
        <item name="titleTextColor">?attr/colorOnBackground</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="ToolbarIconsTintStyle" parent="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">?attr/colorOnBackground</item>
        <item name="actionMenuTextColor">?attr/colorOnBackground</item>
    </style>

    <!--    Text-->
    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/colorSubtitleText</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/colorBodyText</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--    CardView-->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="strokeColor">@color/secondaryNeutral</item>
        <item name="strokeWidth">@dimen/card_view_stroke</item>
    </style>
</resources>